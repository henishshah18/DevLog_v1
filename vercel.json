{
  "version": 2,
  "framework": "vite",
  "buildCommand": "tsc --noEmit && vite build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/index.ts"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "SKIP_PREFLIGHT_CHECK": "true"
  },
  "crons": [
    {
      "path": "/api/cron/check-daily-logs",
      "schedule": "30 16 * * *"
    }
  ]
} 